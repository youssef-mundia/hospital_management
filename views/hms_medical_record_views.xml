<page string="Prescription">
                            <field name="prescription_line_ids">
                                <tree editable="bottom">
                                    <field name="drug_id" required="1" options="{'no_create_edit': True}"/>
                                    <field name="qty_prescribed"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="notes"/>
                                    <field name="is_dispensed" readonly="1" optional="show"/>
                                    <field name="qty_dispensed" readonly="1" optional="show" invisible="not is_dispensed"/>
                                    <field name="dispense_date" readonly="1" optional="show" invisible="not is_dispensed"/>
                                    <button name="action_dispense_drug" type="object" string="Dispense"
                                            icon="fa-check-square-o"
                                            invisible="is_dispensed == True"
                                            help="Mark this drug as dispensed"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="drug_id" required="1" options="{'no_create_edit': True}"/>
                                        <field name="qty_prescribed"/>
                                        <field name="dosage"/>
                                        <field name="frequency"/>
                                        <field name="duration"/>
                                        <field name="notes" nolabel="1" placeholder="Additional notes for this drug..."/>
                                    </group>
                                    <group string="Dispensation Details" invisible="not is_dispensed">
                                        <field name="is_dispensed" readonly="1"/>
                                        <field name="qty_dispensed" readonly="1"/>
                                        <field name="dispense_date" readonly="1"/>
                                        <field name="dispensed_by_id" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                            <group>
                                <field name="prescription_notes" placeholder="General notes about the prescription..."/>
                            </group>
                        </page>